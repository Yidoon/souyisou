{
  "manifest_version": 3,
  "name": "搜译搜",
  "version": "0.1.0",
  "description": "Help you quickly switch language for searching. 帮助你快速的切换语言搜索",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "./popup.html"
  },
  "content_scripts": [
    {
      "js": ["js/content_script.js"],
      "matches": ["<all_urls>"],
      "css": ["./content_script.css"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["https://api.interpreter.caiyunai.com/*"]
}
