{
  "manifest_version": 3,
  "name": "搜译搜",
  "version": "1.0.0",
  "description": "一个帮助你翻译的网站",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "./popup.html"
  },
  "content_scripts": [
    {
      "js": ["js/content_script.js"],
      "matches": ["<all_urls>"],
      "css": ["./content_script.css"]
    }
  ],
  "permissions": ["storage"]
}
